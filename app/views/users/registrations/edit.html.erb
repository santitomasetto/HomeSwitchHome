<h2>Editar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
      <div class="col-md-4">
        <%= f.label :name, 'Nombre' %>
        <%= f.text_field :name, class: 'form-control',autofocus: true, label: 'Nombre',maxlength: 20 , placeholder: 'Ingrese el nombre' %>
      </div>
    </div>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
      <div class="col-md-4">
        <%= f.label :birthdate, 'Fecha de Nacimiento' %>
        <%= f.date_field :birthdate, class: 'form-control', label: 'Fecha de Nacimiento' %>
      </div>
    </div>

  <div class="row">
    <div class="col-md-4">
    <%= f.label :password, "Contrase単a" %> <i>(Dejar en blanco si no la quieres cambiar)</i><br />
    <%= f.password_field :password,class: 'form-control', autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Minima cantidad de caracteres: <%= @minimum_password_length %> </em>
    <% end %>
    </div>
  </div>

 <div class="row">
    <div class="col-md-4">
      <%= f.label :password_confirmation, "Confirmacion de contrase単a" %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"%>
    </div>
  </div>

 <div class="row">
    <div class="col-md-4">
    <%= f.label :current_password, "Contrase単a actual" %> <i>(Necesitamos tu contrase単a actual para poder verificar los cambios)</i><br />
    <%= f.password_field :current_password,class: 'form-control', autocomplete: "current-password",required: true %>
    </div>
  </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :card_number, 'Numero de Tarjeta' %>
        <%= f.text_field :card_number, class: 'form-control', label: 'Numero de Tarjeta', placeholder: 'Ingrese su numero de tarjeta'%>
      </div>
    </div>
      <div class="row">
      <div class="col-md-4">
        <%= f.label :card_security_number, 'Codigo de Seguridad' %>
        <%= f.password_field :card_security_number, class: 'form-control', label: 'Codigo de Seguridad', placeholder: 'Ingrese su codigo de tarjeta' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.label :card_vto, 'Fecha de Vencimiento' %>
        <%= f.date_field :card_vto, class: 'form-control', label: 'Fecha de Vencimiento' %>
      </div>
    </div>

  <%= f.submit "Actualizar Usuario", class: 'btn btn-primary' %>
<% end %>

<p><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %></p>

<%= link_to 'Volver', residences_path, class: 'btn btn-default'%>
