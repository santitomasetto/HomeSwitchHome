<h2>Nuevo Usuario</h2>

<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
      <div class="col-md-4">
        <%= f.label :name, 'Nombre' %>
        <%= f.text_field :name, class: 'form-control',autofocus: true, label: 'Nombre',maxlength: 20 , placeholder: 'Ingrese el nombre',required: true %>
      </div>
    </div>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', autocomplete: "email",required: true %>
    </div>
  </div>

  <div class="row">
      <div class="col-md-4">
        <%= f.label :birthdate, 'Fecha de Nacimiento' %>
        <%= f.date_field :birthdate, class: 'form-control', label: 'Fecha de Nacimiento',required: true %>
      </div>
    </div>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password",required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password",required: true %>
    </div>
  </div>

  <div class="row">
      <div class="col-md-4">
        <%= f.label :card_number, 'Numero de Tarjeta' %>
        <%= f.text_field :card_number, class: 'form-control', label: 'Numero de Tarjeta', placeholder: 'Ingrese su numero de tarjeta',required: true %>
      </div>
    </div>
      <div class="row">
      <div class="col-md-4">
        <%= f.label :card_security_number, 'Codigo de Seguridad' %>
        <%= f.password_field :card_security_number, class: 'form-control', label: 'Codigo de Seguridad', placeholder: 'Ingrese su codigo de tarjeta',required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.label :card_vto, 'Fecha de Vencimiento' %>
        <%= f.date_field :card_vto, class: 'form-control', label: 'Fecha de Vencimiento',required: true %>
      </div>
    </div>
    <%= f.hidden_field :premium, value: false %>
    <%= f.hidden_field :admin, value: false %>
    <%= f.submit "Guardar Usuario", class: 'btn btn-primary' %>
    <%= link_to 'Volver', residences_path, class: 'btn btn-default'%>
<% end %>
</div>
<%= render "users/shared/links" %>
