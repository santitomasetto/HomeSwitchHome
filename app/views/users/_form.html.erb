<div class="container">

	<%= form_for @user do |u| %>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :name, 'Nombre' %>
				<%= u.text_field :name, class: 'form-control', label: 'Nombre',maxlength: 20 , placeholder: 'Ingrese el nombre',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :mail, 'Email' %>
				<%= u.email_field :mail, class: 'form-control', label: 'Email', placeholder: 'Ingrese su email',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :birthdate, 'Fecha de Nacimiento' %>
				<%= u.date_field :birthdate, class: 'form-control', label: 'Fecha de Nacimiento',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :password, 'Contraseña' %>
				<%= u.password_field :password, class: 'form-control', label: 'Contraseña',placeholder: 'Ingrese su contraseña',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :card_number, 'Numero de Tarjeta' %>
				<%= u.number_field :card_number, class: 'form-control', label: 'Numero de Tarjeta', placeholder: 'Ingrese su numero de tarjeta',max: 9999999999999999,min: 0000000000000000,required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :card_security_number, 'Codigo de Seguridad' %>
				<%= u.password_field :card_security_number, class: 'form-control', label: 'Codigo de Seguridad', placeholder: 'Ingrese su codigo de tarjeta',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= u.label :card_vto, 'Fecha de Vencimiento' %>
				<%= u.date_field :card_vto, class: 'form-control', label: 'Fecha de Vencimiento',required: true %>
			</div>
		</div>
		<%= u.hidden_field :premium %>
		<%= u.submit "Guardar Usuario", class: 'btn btn-primary' %>
		<%= link_to 'Volver', residences_path, class: 'btn btn-default'%>
	<%end%>
	
</div>