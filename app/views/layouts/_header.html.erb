
<header>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="navbar-header">
				<%= link_to root_path, class: 'navbar-brand' do %>
					<%= image_tag "HSH-Complete.svg", title: "Pagina Principal", class: "rounded float-left", width: 150, height: 150 %>
				<% end %>
			</div>
			<div class="collapse navbar-collapse">
		</div>
	</div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <%= image_tag "HSH-Logo.svg", class: "rounded float-left", width: 50, height: 50 %>
  <%end%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Home', '/residences', class: "nav-link" %>
      </li>
      <% if current_user %>
      <li class="nav-item">
          <%= link_to 'Subastas', '/auctions', class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item">
        <%= link_to 'Contacto', '/contacto', class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Terminos y condiciones', '/terminosycondiciones', class: "nav-link" %>
      </li>

    </ul>
    <form class="form-inline my-2 my-lg-0">
      <%= form_tag residences_path, method: :get, enforce_utf8: false  do %>
      <%= text_field_tag :keyword, nil, class: "form-control mr-sm-2", placeholder: "Ingrese Nombre" %>
      <%= submit_tag "Buscar", name: nil, class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
    </form>
    <% if current_user %>
      <ul class="navbar-nav">
         <li class="nav-item dropdown">
           <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <%= User.find(current_user.id).name %>
           </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Out', destroy_user_session_path,method: :delete, class: "nav-link" %>
        </li>
      </ul>
    <% else %>
    <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign In', new_user_session_path, class: "nav-link" %>
        </li>
        </ul>
    <% end %>
  </div>
</nav> 
  <% if notice%>
    <div class="alert alert-success" role="alert"><%= notice %></div>
  <%end%>
  <% if alert%>
  <div class="alert alert-danger" role="alert"><%= alert %></div>
  <%end%>
</header>

