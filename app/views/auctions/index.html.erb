<h3>Subastas</h3>
<table class="table">
	<thead>
		<tr>
			<th width="10%">Nombre</th>
			<th width="10%">Puja</th>
			<th width="40%">Foto</th>
			<th width="10%">Fecha inicial</th>
			<th width="10%">Fecha final</th>
			<th width="10%"></th>
			<th width="10%"></th>
			<th colspan="7"></th>
		</tr>
	</thead>
	<tbody>
		<% @auctions.each do |auction| %>
			<tr>
				<td><%= link_to auction.name, auction_bid_up_path(:auction => auction.id) %></td>
				<td><%= auction.bid %></td>
				<td><img src="<%= auction.residence.photo%>" width="300"></td>
				<td><%= auction.in_date %></td>
				<td><%= auction.out_date %></td>
				<td><%= link_to 'Editar', edit_auction_path(auction), class: 'btn btn-warning' %></td>
				<td><%= link_to 'Eliminar', auction, method: :delete, class: 'btn btn-danger', data: { confirm: 'Â¿realmente desea eliminar la subasta?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
