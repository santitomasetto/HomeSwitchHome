<h3>Subastas</h3>
<table class="table">
	<thead>
		<tr>
			<th width="20%">Nombre</th>
			<th width="20%">Puja</th>
			<th width="60%">Foto</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @auctions.each do |auction| %>
			<tr>
				<td><%= auction.name %></td>
				<td><%= auction.bid %></td>
				<td>sinFoto</td>
				<td><%= link_to 'Editar', auction, method: :update, class: 'btn btn-warning' %></td>
				<td><%= link_to 'Eliminar', auction, method: :delete, class: 'btn btn-danger', data: { confirm: '¿realmente desea eliminar la subasta?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</br>

<div class="container">
  <div class="row">
    <% @auctions.each do |auction| %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">

        <img class="card-img-top" src="<%= Residence.find(auction.residence_id).photo%>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= link_to auction.name, auction %></h5>
            <a><%= link_to 'Editar', auction, method: :update, class: 'btn btn-info btn-sm' %>
               <%= link_to 'Eliminar', auction, method: :delete, class: 'btn btn-danger', data: { confirm: '¿realmente desea eliminar la subasta?' } %>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>