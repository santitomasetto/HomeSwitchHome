<h3>Subastas</h3>
<table class="table">
	<thead>
		<tr>
			<th width="20%">Nombre</th>
			<th width="20%">Puja</th>
			<th width="60%">Foto</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @auctions.each do |auction| %>
			<tr>
				<td><%= auction.name %></td>
				<td><%= auction.bid %></td>
				<td><img src="<%= auction.residence.photo%>"></td>
				<td><%= link_to 'Editar', auction, method: :update, class: 'btn btn-warning' %></td>
				<td><%= link_to 'Eliminar', auction, method: :delete, class: 'btn btn-danger', data: { confirm: 'Â¿realmente desea eliminar la subasta?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
