<div class="container">

	<%= form_for @residence do |r| %>
		<div class="row">
			<div class="col-md-4">
				<%= r.label :name, 'Nombre' %>
				<%= r.text_field :name, class: 'form-control', label: 'Nombre',maxlength: 20 , placeholder: 'Ingrese el nombre',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= r.label :country, 'Pais' %>
				<%= r.text_field :country, class: 'form-control', label: 'Pais',maxlength: 15 , placeholder: 'Ingrese el pais',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= r.label :address, 'Direccion' %>
				<%= r.text_field :address, class: 'form-control', label: 'direccion',maxlength: 20 , placeholder: 'Ingrese la direccion',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= r.label :capacity, 'Capacidad' %>
				<%= r.number_field :capacity, class: 'form-control', label: 'Capacidad',in: 1.0..10.0 ,step: 1, placeholder: 'Ingrese la capacidad',required: true %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= r.label :photo, 'Foto' %>
				<%= r.text_field :photo, class: 'form-control', label: 'Foto', placeholder: 'Ingrese la imagen',required: true %>
			</div>
		</div>
		<%= r.submit "Guardar Residencia", class: 'btn btn-primary' %>
		<%= link_to 'Volver', residences_path, class: 'btn btn-default'%>
	<%end%>
	
</div>